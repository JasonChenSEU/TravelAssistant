<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.jason.listviewtest.activity.AboutActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="0dp"
        android:layout_weight="5">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/logo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textSize="24sp"
            android:text="@string/about_title"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="@string/about_subtitle"/>


    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">

        <View
            style="@style/h_line"/>

        <TextView
            android:layout_marginTop="16dp"
            style="@style/about_textView"
            android:text="@string/author"/>

        <TextView
            style="@style/about_textView"
            android:text="@string/email"/>

        <RelativeLayout
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/about_src_spot_title"
                style="@style/about_textView"
                android:text="景点数据来源: "/>

            <TextView
                android:layout_toRightOf="@id/about_src_spot_title"
                android:layout_marginLeft="6dp"
                style="@style/about_textView"
                android:text="@string/source_spot"/>

        </RelativeLayout>


        <RelativeLayout
            android:gravity="center"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/about_src_weather_title"
                style="@style/about_textView"
                android:text="天气数据来源:"/>

            <TextView
                android:layout_toRightOf="@id/about_src_weather_title"
                android:layout_marginLeft="6dp"
                style="@style/about_textView"
                android:text="@string/source_weather"/>

        </RelativeLayout>

        <TextView
            android:layout_marginTop="6dp"
            style="@style/about_textView"
            android:text="图片来源于网络"/>


    </LinearLayout>



</LinearLayout>
